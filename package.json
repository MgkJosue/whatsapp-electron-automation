{
  "name": "whatsapp-electron-automation",
  "version": "1.0.0",
  "description": "A desktop application for Windows that enables automated WhatsApp messaging with contact management and file operations",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "dev": "npm run build:css && electron . --dev",
    "build:css": "tailwindcss -i ./src/renderer/styles/tailwind.css -o ./src/renderer/styles/output.css --minify",
    "watch:css": "tailwindcss -i ./src/renderer/styles/tailwind.css -o ./src/renderer/styles/output.css --watch",
    "build": "npm run build:css && electron-builder",
    "build:win": "npm run build:css && electron-builder --win",
    "build:dir": "npm run build:css && electron-builder --dir"
  },
  "keywords": [
    "whatsapp",
    "electron",
    "automation",
    "desktop",
    "messaging"
  ],
  "author": "Josue Alvarez",
  "license": "MIT",
  "build": {
    "appId": "com.josue.whatsapp-automation",
    "productName": "WhatsApp Automation Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhatsApp Automation"
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "libphonenumber-js": "^1.10.0",
    "mime-types": "^3.0.2",
    "papaparse": "^5.5.3",
    "qrcode-terminal": "^0.12.0",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.0",
    "whatsapp-web.js": "^1.34.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}
